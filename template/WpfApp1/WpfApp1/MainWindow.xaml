<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenCvSharp YOLO WPF" Height="600" Width="800">
        <Grid>
        <!-- 전체를 가로로 1:2 비율로 나눔 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" /> <!-- 왼쪽 1/3 -->
            <ColumnDefinition Width="2*" /> <!-- 오른쪽 2/3 -->
        </Grid.ColumnDefinitions>

        <!-- 왼쪽 영역: DataGrid 2개 세로 배치 -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" /> <!-- 위 DataGrid -->
                <RowDefinition Height="1*" /> <!-- 아래 DataGrid -->
            </Grid.RowDefinitions>

            <DataGrid Name="DataGridTop" Grid.Row="0" Margin="5" AutoGenerateColumns="True" />
            <DataGrid Name="DataGridBottom" Grid.Row="1" Margin="5" AutoGenerateColumns="True" />
        </Grid>

        <!-- 오른쪽 영역: 비디오 + 캔버스 겹침 -->
        <Grid Grid.Column="1">
            <!-- 비디오와 캔버스를 겹치기 위해 Grid에 두 요소를 같이 넣음 -->
            <Image Name="WebcamImage" Stretch="Uniform" />
            <Canvas Name="OverlayCanvas" Background="Transparent" IsHitTestVisible="False" />
        </Grid>
    </Grid>
</Window>
